 <% if user_signed_in? %>
<h1>Friends</h1>

<div id="friends">
  <table class="table table-striped table-hover"> 
    <thead class="table-dark">
      <tr>
        <th scope="col">Name</th> 
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Twitter</th> 
        <th colspan='1'> </th>
        
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @friends.each do |friend| %>
          <% if friend.user == current_user %>
          <%= render friend %>  
          <td>
          <%= button_to "Delete", friend, method: :delete, data:{confirm: 'Are you sure?'} , class:"btn btn-sm  btn-outline-danger" %> 
          </td> 
        <%end%>
      </tr>
      <% end %>
    </tbody>
        
  </table>
    
</div>


<%= link_to "New friend", new_friend_path, class:"btn btn-primary" %>
<% else %>

  <h1>Welcome to Friend APP</h1>
  <br/>
  <h4>Features:</h4>
  <ul>
    <li>Add/Edit/Update/Delete Friends</li>
    <li>See List Of Friends Per User Id</li>
  </ul>

<%end%>