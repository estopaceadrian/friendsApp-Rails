 

<div class="card">
  <div class=" card-body">
    <h1 class="display-4"> <%= @friend.first_name %> <%= @friend.last_name %></h1>
    <p class="lead"><%= @friend.email %> | <%= @friend.phone %> | <%= @friend.twitter %></p>
    <hr class="my-4">
      
  <%= link_to "Edit", edit_friend_path(@friend) , class:"btn  btn-success" %>   
   <%= button_to "Delete", @friend, method: :delete , class:"btn btn-sm  btn-danger" %>       
  <%= link_to "Back to friends", friends_path, class:"btn btn-outline-secondary" %>
  </div>
</div>
  